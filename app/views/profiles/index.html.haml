%section#profilesList

  %h2
    %span.small votre recherche :
    - if @names.present?
      %span= @names.join(', ')
    - if @skills.present?
      - @skills.each do |skill|
        %span= skill.label

  %div.wrapper
    %ul.profilist
      = render partial: 'profiles/profile', collection: @profiles

    = paginate @profiles
