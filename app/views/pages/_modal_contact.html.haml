%div#contactForm.modal.fade{ tabindex: '-1', role: 'dialog', 'aria-labelledby'=>'myModalLabel', 'aria-hidden'=>'true' }
  %div.modal-dialog
    %div.modal-content
      = form_tag message_to_giw_contacts_path, remote: true do
        %div.modal-header
          %h4#contactFormTitle.modal-title Contactez-nous !
        %div.modal-body
          %input{ type: 'email', value: '', name: 'from_email', id: 'email', placeholder: 'votre email', 'data-msg-required'=>'Veuillez saisir votre adresse email.'}
          %input{ type: 'text', value: '', name: 'from_name', id: 'name', placeholder: 'votre nom', 'data-msg-required'=>'Veuillez saisir vos nom et prénom.' }
          %input{ type: 'text', value: '', name: 'subject', id: 'subject', placeholder: 'sujet du message', 'data-msg-required'=>'Veuillez saisir un sujet.' }
          %input{ type: 'text', value: '', name: 'math', id: 'math', placeholder: 'additionnez 2+6', 'data-msg-required'=>'Veuillez saisir la réponse à cette addition.' }
          %textarea{ placeholder: 'votre message', name: 'message', 'data-msg-required'=>'Veuillez saisir votre message.' }
          %p.errorMsg
        %div.modal-footer
          %button.btn.btn-primary Envoyer
